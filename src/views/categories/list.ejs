<%- include("../layouts/main", {
  title: "Categories",
  body: `
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Categories</h2>
      <a href="/categories/add" class="btn btn-primary">Add Category</a>
    </div>

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        ${categories
          .map(
            (c, i) => `
            <tr>
              <td>${i + 1}</td>
              <td>${c.name}</td>
              <td>
                <a href="/categories/edit/${c._id}" class="btn btn-sm btn-warning">Edit</a>
                <form action="/categories/delete/${c._id}?_method=DELETE" method="POST" style="display:inline-block;">
                  <button class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          `
          )
          .join("")}
      </tbody>
    </table>
  `
}) %>
